<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.solivar.getlocationinmap.EnterCodeScreen" >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:gravity="center" >

    <TextView
        android:id="@+id/verification_code_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#ffffff"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:textSize="16dp"
        android:text="Enter Code here:" />

    <EditText
        android:id="@+id/entered_code"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/verification_code_text"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:gravity="center"
        android:textAlignment="center"
        android:inputType="phone">
        <requestFocus />
    </EditText>
    <Button
        android:id="@+id/verify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:background="#12a5f4"
        android:layout_below="@+id/entered_code"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:textAlignment="center"
        android:text="Verify"/>
    
</RelativeLayout>

</RelativeLayout>
