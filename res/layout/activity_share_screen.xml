<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#58FAF4"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.solivar.getlocationinmap.ShareScreen" >

    <ImageButton
        android:id="@+id/whatsapp"
        android:background="#58FAF4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="130dp"
        android:src="@drawable/whatsapp_icon" />

    <ImageButton
        android:id="@+id/hike"
        android:background="#58FAF4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="30dp"
        android:layout_marginTop="130dp"
        android:src="@drawable/hike_icon" />

    <ImageButton
        android:id="@+id/gmail"
        android:background="#58FAF4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/whatsapp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/gmail_icon" />

    <ImageButton
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/hike"
        android:layout_alignTop="@+id/gmail"
        android:background="#58FAF4"
        android:src="@drawable/message_icon" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#8c9eff"
        android:gravity="center_horizontal"
        android:textSize="16dp" />

</RelativeLayout>
