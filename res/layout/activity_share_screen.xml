<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.solivar.getlocationinmap.ShareScreen" >

    <ImageButton
        android:id="@+id/whatsapp"
        android:background="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="130dp"
        android:src="@drawable/whatsapp_icon" />

    <ImageButton
        android:id="@+id/hike"
        android:background="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="30dp"
        android:layout_marginTop="130dp"
        android:src="@drawable/hike_icon" />

    <ImageButton
        android:id="@+id/gmail"
        android:background="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/whatsapp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/gmail_icon" />

    <ImageButton
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/hike"
        android:layout_alignTop="@+id/gmail"
        android:background="#ffffff"
        android:src="@drawable/message_icon" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:textColor="#ffffff"
        android:paddingTop="20dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#12a5f4"
        android:gravity="center_horizontal"
        android:textSize="16dp" />

    <Button
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="96dp"
        android:paddingRight="10dip"
        android:paddingLeft="10dip"
        android:background="#12a5f4"
        android:textColor="#ffffff"
        android:text="Send to Favourites" />

    <Button
        android:id="@+id/add_fav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:paddingRight="10dip"
        android:paddingLeft="10dip"
        android:background="#12a5f4"
        android:textColor="#ffffff"
        android:layout_marginBottom="25dp"
        android:text="Add Favourites" />

</RelativeLayout>
